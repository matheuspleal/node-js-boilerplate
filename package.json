{
  "name": "node-js-skeleton",
  "version": "0.0.0",
  "description": "Node.js Skeleton developed with TypeScript, using Clean Architecture, Domain-Driven Design (DDD) and Test Driven Development (TDD)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "check": "npx npm-check -s -u",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "node:js": "node --env-file=.env",
    "node:ts": "node --env-file=.env --import=tsx",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "prepare": "husky",
    "prisma:studio": "npx prisma studio",
    "start:dev": "npm run migrate:dev && npm run node:ts -- --inspect --watch src/main/server.ts",
    "start:prod": "npm run migrate:prod && npm run node:js -- dist/server.js",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --config ./vitest.config.ci.ts --coverage",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:ui": "vitest --ui",
    "test:staged": "vitest related --run",
    "test:watch": "vitest --passWithNoTests",
    "wizard": "npm run node:ts -- ./scripts/wizard.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "8.4.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "12.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.0.3",
    "@semantic-release/release-notes-generator": "13.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.12.7",
    "@types/pg": "8.11.5",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "1.5.2",
    "@vitest/ui": "1.5.2",
    "eslint": "8.57.0",
    "eslint-config-love": "47.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vitest-globals": "1.5.0",
    "husky": "9.0.11",
    "kleur": "4.1.5",
    "lint-staged": "15.2.2",
    "npm-check": "6.0.1",
    "prisma": "5.13.0",
    "semantic-release": "23.0.8",
    "supertest": "7.0.0",
    "tsup": "8.0.2",
    "tsx": "4.7.3",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.2",
    "vitest-mock-extended": "1.3.1"
  },
  "dependencies": {
    "@apollo/server": "4.10.4",
    "@as-integrations/fastify": "2.1.1",
    "@fastify/cors": "9.0.1",
    "@prisma/client": "5.13.0",
    "bcryptjs": "2.4.3",
    "fastify": "4.26.2",
    "graphql": "16.8.1",
    "jsonwebtoken": "9.0.2",
    "pg": "8.11.5",
    "zx": "8.0.2"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "domain-driven-design",
    "test-driven-development"
  ],
  "author": "Matheus Pereira Leal",
  "license": "ISC",
  "engines": {
    "node": ">= 20.12.2"
  }
}
