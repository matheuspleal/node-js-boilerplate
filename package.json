{
  "name": "js-skeleton",
  "version": "0.0.0",
  "description": "Node.js Skeleton developed with TypeScript, using Clean Architecture, Domain-Driven Design (DDD) and Test Driven Development (TDD)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "node:js": "node --env-file=.env",
    "node:ts": "node --env-file=.env --import=tsx",
    "prepare": "husky",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:ci": "npm run test -- --coverage",
    "test:staged": "vitest related --run",
    "test:watch": "vitest --passWithNoTests"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@types/node": "20.11.30",
    "@vitest/coverage-v8": "1.4.0",
    "@vitest/ui": "1.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vitest-globals": "1.5.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "tsx": "4.7.1",
    "typescript": "5.4.3",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.4.0",
    "vitest-mock-extended": "1.3.1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "domain-driven-design",
    "test-driven-development"
  ],
  "author": "Matheus Pereira Leal",
  "license": "ISC",
  "engines": {
    "node": ">= 20.12.0"
  }
}
