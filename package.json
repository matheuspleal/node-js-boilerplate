{
  "name": "node-js-boilerplate",
  "version": "1.0.0",
  "description": "Node.js Boilerplate developed with TypeScript, using Clean Architecture, Domain-Driven Design (DDD) and Test Driven Development (TDD)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "check": "npx npm-check -s -u",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "node:js": "node --env-file=.env",
    "node:ts": "node --env-file=.env --import=tsx",
    "prepare": "husky",
    "prisma:studio": "npx prisma studio",
    "start:dev": "npm run migrate:dev && npm run node:ts -- --inspect --watch src/main/server.ts",
    "start:prod": "npm run migrate:prod && npm run node:js -- dist/server.js",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --config ./vitest.config.ci.ts --coverage",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:staged": "vitest related --run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --passWithNoTests",
    "wizard": "npm run node:ts -- ./scripts/wizard.ts",
    "wizard:logs": "npm run node:ts -- ./scripts/wizard.ts --logs"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@faker-js/faker": "8.4.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "12.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.0.5",
    "@semantic-release/release-notes-generator": "13.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "20.12.12",
    "@types/pg": "8.11.10",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "coveralls": "3.1.1",
    "eslint": "8.57.0",
    "eslint-config-love": "47.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vitest-globals": "1.5.0",
    "husky": "9.1.7",
    "kleur": "4.1.5",
    "lint-staged": "15.2.10",
    "npm-check": "6.0.1",
    "openapi-types": "12.1.3",
    "prisma": "5.14.0",
    "semantic-release": "23.1.1",
    "supertest": "7.0.0",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0",
    "vitest-mock-extended": "1.3.1"
  },
  "dependencies": {
    "@apollo/server": "4.11.2",
    "@as-integrations/fastify": "2.1.1",
    "@fastify/cors": "9.0.1",
    "@prisma/client": "5.14.0",
    "@scalar/fastify-api-reference": "1.25.72",
    "@scalar/themes": "0.7.11",
    "bcryptjs": "2.4.3",
    "fastify": "4.27.0",
    "graphql": "16.9.0",
    "jsonwebtoken": "9.0.2",
    "pg": "8.13.1",
    "zx": "8.2.4"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "domain-driven-design",
    "test-driven-development"
  ],
  "author": "Matheus Pereira Leal",
  "license": "ISC",
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  },
  "engines": {
    "node": ">= 22.12.0"
  }
}
